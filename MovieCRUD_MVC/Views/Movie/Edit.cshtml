@model MovieCRUD_MVC.Models.Movie

@{
    ViewData["Title"] = "Edit";
}


<h4>Edit Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
